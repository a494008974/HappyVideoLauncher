<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Focus_Enable">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Un_Focus_Enable">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Top_Title" parent="Focus_Enable">
        <item name="android:layout_width">@dimen/top_title_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/top_title_text_margin</item>
        <item name="android:textSize">@dimen/top_title_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Content_View_Style_short_long" parent="Focus_Enable">
        <item name="android:layout_width">@dimen/dimen_210_dip</item>
        <item name="android:layout_height">@dimen/dimen_290_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_10_dip</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>

    <style name="Content_View_Style_short_short" parent="Focus_Enable">
        <item name="android:layout_width">@dimen/dimen_210_dip</item>
        <item name="android:layout_height">@dimen/dimen_140_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_10_dip</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>
    
    <style name="Content_View_Style_long_long" parent="Focus_Enable">
        <item name="android:layout_width">@dimen/dimen_430_dip</item>
        <item name="android:layout_height">@dimen/dimen_290_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_10_dip</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>

    <style name="Content_View_Style_long_short" parent="Focus_Enable">
        <item name="android:layout_width">@dimen/dimen_430_dip</item>
        <item name="android:layout_height">@dimen/dimen_140_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_10_dip</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>
    
    
    <style name="Content_View_simple_one" parent="Focus_Enable">
        <item name="android:layout_width">@dimen/dimen_310_dip</item>
        <item name="android:layout_height">@dimen/dimen_468_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_4_dip</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>
    <style name="Content_View_simple_two" parent="Focus_Enable">
        <item name="android:layout_width">@dimen/dimen_209_dip</item>
        <item name="android:layout_height">@dimen/dimen_232_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_4_dip</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>
    <style name="Content_View_simple_three" parent="Focus_Enable">
        <item name="android:layout_width">@dimen/dimen_422_dip</item>
        <item name="android:layout_height">@dimen/dimen_232_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_4_dip</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>
    <style name="Content_View_simple_four" parent="Focus_Enable">
        <item name="android:layout_width">@dimen/dimen_205_dip</item>
        <item name="android:layout_height">@dimen/dimen_468_dip</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>
    
    
     <style name="Transparent">    
    <item name="android:windowBackground">@drawable/tran</item>    
    <item name="android:windowNoTitle">true</item>    
    <item name="android:windowFullscreen">true</item>  
    <item name="android:windowIsTranslucent">true</item>       
    <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>    
  	</style>
  	
    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>
    
    <style name="DownTransparent">    
	    <item name="android:windowBackground">@drawable/tran</item>    
	    <item name="android:windowNoTitle">true</item>    
	    <item name="android:windowFullscreen">true</item>  
	    <item name="android:windowIsTranslucent">true</item>       
	    <item name="android:windowAnimationStyle">@style/dialogWindowAnim</item>    
  	</style>
    
    <style name="progressbar_horizontal">
        <item name="android:maxHeight">@dimen/dimen_10_dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:minHeight">@dimen/dimen_10_dip</item>
    </style>
</resources>
