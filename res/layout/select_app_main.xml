<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250_dip"
        android:gravity="center_vertical"
        android:background="@drawable/bg_add_apps"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5_dip" >
        <RelativeLayout 
            android:layout_width="match_parent"
		    android:layout_height="@dimen/dimen_50_dip">
            <TextView 
		    android:id="@+id/select_app"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@android:color/white"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="@dimen/dimen_10_dip"
		    android:textSize="@dimen/dimen_28_dip"
		    android:text="@string/select_app"
		    />
            <ImageView 
	        android:id="@+id/up_anim"
	        android:layout_width="@dimen/dimen_20_dip"
	        android:layout_height="@dimen/dimen_40_dip"
	        android:layout_centerInParent="true"
	        android:visibility="gone"
	        android:scaleType="fitCenter"
	        android:src="@drawable/up_anim"
	        />
        </RelativeLayout>
		
        <com.mylove.happyvideo.view.MyHorizontalScrollView
            android:id="@+id/my_horizontal_scroller"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_180_dip" >
        </com.mylove.happyvideo.view.MyHorizontalScrollView>
    </LinearLayout>

</LinearLayout>